<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical">

<TextView
    android:id="@+id/site_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:textStyle="bold"
    android:textSize="15sp"
    android:textAlignment="textStart"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@android:color/black"
    android:text="Sites Touristiques"
    />

<fragment
    android:id="@+id/fragment_clout"
    android:name="com.example.triptogalsen.ui.fragments.CloutLocationFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/gestro_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:textStyle="bold"
    android:textSize="15sp"
    android:textAlignment="textStart"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@android:color/black"
    android:text="Gastronomies"
    />

<fragment
    android:id="@+id/fragment_picture"
    android:name="com.example.triptogalsen.ui.fragments.FamousPictureFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<TextView
        android:id="@+id/ethnie_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:text="Ethnies"
        />

<fragment
    android:id="@+id/fragment_site"
    android:name="com.example.triptogalsen.ui.fragments.SitesFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/religieux_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:textStyle="bold"
    android:textSize="15sp"
    android:textAlignment="textStart"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@android:color/black"
    android:text="Sites Religieux"
    />

<fragment
    android:id="@+id/fragment_religieux"
    android:name="com.example.triptogalsen.ui.fragments.SitesFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</LinearLayout>